<%- messages()%>
    <form id="repairForm" action="/repair/add" method="post">
        <h1>Add Vehicle</h1>
        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>
                <div class="form-group">
                    <%-vehicles%>
                </div>

                <div class="form-group">
                    <label for="repair_description">Description</label>
                    <textarea name="repair_description" id="repair_description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="repair_cost">Cost</label>
                    <input type="text" name="repair_cost" id="repair_cost" required placeholder="decimals or integers">
                </div>
                <div class="form-group">
                    <label for="repair_cost">Date</label>
                    <input type="date" name="repair_date" id="repair_date" required placeholder="Enter a valid date">
                </div>
                <input type="submit" value="Register">
    </form>