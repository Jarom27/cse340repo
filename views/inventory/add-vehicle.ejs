<%- messages()%>
    <form id="classificationForm" action="/inv/add-vehicle" method="post">
        <h1>Add Vehicle</h1>
        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>
                <div class="form-group">
                    <%-classifications%>
                </div>
                <div class="form-group">
                    <label for="inv_make">Make</label>
                    <input type="text" name="inv_make" id="inv_make" required placeholder="min of 3 characters">
                </div>
                <div class="form-group">
                    <label for="inv_model">Model</label>
                    <input type="text" name="inv_model" id="inv_model" required placeholder="min of 3 characters">
                </div>
                <div class="form-group">
                    <label for="inv_description">Description</label>
                    <textarea name="inv_description" id="inv_description" required rows="4"></textarea>
                </div>
                <div class="form-group">
                    <label for="inv_image">Image Path</label>
                    <input type="text" name="inv_image" id="inv_image" required value="/images/vehicles/no-image.png">
                </div>
                <div class="form-group">
                    <label for="inv_thumbnail">Thumbnail Path</label>
                    <input type="text" name="inv_thumbnail" id="inv_thumbnail" required
                        value="/images/vehicles/no-image.png">
                </div>
                <div class="form-group">
                    <label for="inv_price">Price</label>
                    <input type="text" name="inv_price" id="inv_price" required placeholder="decimals or integers">
                </div>
                <div class="form-group">
                    <label for="inv_year">Year</label>
                    <input type="text" name="inv_year" id="inv_year" required placeholder="4-digit year">
                </div>
                <div class="form-group">
                    <label for="inv_miles">Miles</label>
                    <input type="text" name="inv_miles" id="inv_miles" required placeholder="digits only">
                </div>
                <div class="form-group">
                    <label for="inv_color">Color</label>
                    <input type="text" name="inv_color" id="inv_color" required>
                </div>
                <input type="submit" value="Register">
    </form>