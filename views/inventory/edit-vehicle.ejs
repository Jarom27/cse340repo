<%- messages()%>
    <form id="classificationForm" action="/inv/update" method="post">
        <h1><%-title%></h1>
        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>
                <div class="form-group">
                    <%-classifications%>
                </div>
                <div class="form-group">
                    <label for="inv_make">Make</label>
                    <input type="text" name="inv_make" id="inv_make" required placeholder="min of 3 characters"
                        value="<%-inv_make%>">
                </div>
                <div class="form-group">
                    <label for="inv_model">Model</label>
                    <input type="text" name="inv_model" id="inv_model" required placeholder="min of 3 characters"
                        value="<%-inv_model%>">
                </div>
                <div class="form-group">
                    <label for="inv_description">Description</label>
                    <textarea name="inv_description" id="inv_description" required
                        rows="4"><%-inv_description%></textarea>
                </div>
                <div class="form-group">
                    <label for="inv_image">Image Path</label>
                    <input type="text" name="inv_image" id="inv_image" required value="<%-inv_image%>">
                </div>
                <div class="form-group">
                    <label for="inv_thumbnail">Thumbnail Path</label>
                    <input type="text" name="inv_thumbnail" id="inv_thumbnail" required value="<%-inv_thumbnail%>>">
                </div>
                <div class="form-group">
                    <label for="inv_price">Price</label>
                    <input type="text" name="inv_price" id="inv_price" required placeholder="decimals or integers"
                        value="<%-inv_price%>">
                </div>
                <div class="form-group">
                    <label for="inv_year">Year</label>
                    <input type="text" name="inv_year" id="inv_year" required placeholder="4-digit year"
                        value="<%-inv_year%>">
                </div>
                <div class="form-group">
                    <label for="inv_miles">Miles</label>
                    <input type="text" name="inv_miles" id="inv_miles" required placeholder="digits only"
                        value="<%-inv_miles%>">
                </div>
                <div class="form-group">
                    <label for="inv_color">Color</label>
                    <input type="text" name="inv_color" id="inv_color" required value="<%-inv_color%>">
                </div>
                <input type="submit" value="Update">
                <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                    <% } %>>
    </form>